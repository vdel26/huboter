extends layout

block content
  form(action="/login", method="post")
    fieldset.form-group
      label Username:
      input.form-control(type="text", name="username", required)

      label Password:
      input.form-control(type="password", name="password", required)

      input.form-control(type="submit", value="LOG IN")

  a(href="/signup")
    button Go to sign up