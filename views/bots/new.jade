extends ../layout

block content
  if error
    p= error

  form(method="POST", action="/#{userid}/bots", class="bots-new")
    fieldset.info
      input(type="text", name="name", placeholder="bot name", required)
      select(name="adapter", required)
        option(value="", disabled) Select your adapter
        option(value="slack") Slack
        option(value="irc") IRC
        option(value="hipchat") Hipchat

    include includes/_config-slack.jade
    include includes/_config-irc.jade
    include includes/_config-hipchat.jade

    input(type="submit", value="create")